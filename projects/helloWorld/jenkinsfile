pipeline {
    agent any 
    stages {
        stage('checkout') {
            steps {
                script {
                    checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Wakeelabdul/LearnWithSagarBatch2-old.git']])
                }
            }
        }

        stage('install req file') {
            steps {
                script {
                    sh 'pwd'
                    sh 'pip install -r projects/helloWorld/requirements.txt'
                    sh 'sudo pip3 install Flask'
                }
            }
        }
         stage('run applicationt') {
            steps {
                script {
                    sh 'sudo python3 -m projects.helloWorld.app &'
                mail bcc: '', body: "<b>PIPELINE STATUS</b><br>Project: ${env.JOB_NAME} <br>Build Number: ${env.BUILD_NUMBER} <br> URL de build: ${env.BUILD_URL} <br> Build Status: ${env.BUILD_STATUS}", cc: '', charset: 'UTF-8', from: '', mimeType: 'text/html', replyTo: '', subject: "PIPELINE STATUS CI: Project name -> ${env.JOB_NAME}", to: "wakeelabdul50512@gmail.com";
                }
            }
        }
    }
}
